<!doctype html>
<html><head><meta charset="utf-8"/><title>New Requests</title></head><body>
  <h2>Student Requests</h2>
  <% if (pending.length === 0) { %><p>No requests</p><% } else { %>
    <ul>
      <% pending.forEach(p => { %>
        <li>
          <%= p.name %> â€” <%= p.email %>
          <form style="display:inline" method="post" action="/admin/requests/<%= p._id %>/accept">
            <button type="submit">Accept</button>
          </form>
          <form style="display:inline" method="post" action="/admin/requests/<%= p._id %>/decline">
            <button type="submit">Decline</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } %>
  <p><a href="/admin/dashboard">Back</a></p>
</body></html>
